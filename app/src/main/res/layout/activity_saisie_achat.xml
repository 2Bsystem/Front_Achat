<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Activities.saisie.achat.SaisieAchat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        /*Fournisseur*/
         <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Fournisseur"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            android:layout_marginTop="3dp"
            />

        <EditText
            android:id="@+id/achat_fourni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dp"
            android:textSize="22dp"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        /*Depot*/
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Dépôt"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            />

        <Spinner
            android:id="@+id/achat_depot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dp"
            android:textSize="22dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        /*Depot*/
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Acheteur"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            />

        <Spinner
            android:id="@+id/achat_acheteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dp"
            android:textSize="22dp"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        /*Date*/

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Date Réception"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/achat_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dp"
            android:textSize="22dp"
            android:maxLines="1"
            android:focusable="false"
            android:onClick="setDate"
            android:imeOptions="flagNoExtractUi"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        /*Site*/

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Site"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            />

        <EditText
            android:id="@+id/achat_site"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint=""
            android:paddingLeft="3dp"
            android:textSize="22dp"
            android:maxLines="1"
            android:inputType="text"
            android:focusable="false"
            android:imeOptions="flagNoExtractUi"
            android:background="@drawable/border"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Code"
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Produit"
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Colis"
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pièces"
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Poids"
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="P.U."
            android:paddingLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Montant"
            android:paddingLeft="5dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/achat_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            android:fadeScrollbars="false"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

        </ListView>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottom_navigation_saisie_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            app:itemIconTint="@color/colorWhite"
            app:itemTextColor="@color/colorWhite"
            app:menu="@menu/bottom_navigation_add"/>

    </RelativeLayout>


</LinearLayout>